<%- include ('../../partials/header.ejs') %>
<body>
  <%- include ('../../partials/homenavbar.ejs') %>
  <div class="container">
    <br />
    <div class="container">
      <% result.articles.rows.forEach(article => {%>
      <div class="card mb-3">
        <div class="card-header">
          <h2><%= article.title %></h2>
        </div>
        <div class="card-body">
          <a href="/<%= article.slug %>" class="btn btn-primary">Read More</a>
        </div>
      </div>
      <% }); %>
      <div class="row">
        <div class="col col-12">
          <% if (result.page > 1) { %>
            <a
              style="float: left"
              class="btn btn-secondary"
              href="/articles/page/<%= result.page - 1 %>"
            >Previous Page</a>
          <% } %>
          <% if (result.next) { %>
            <a
              style="float: right"
              class="btn btn-primary"
              href="/articles/page/<%= result.page + 1 %>"
            >Next Page</a>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</body>
<%- include ('../../partials/footer.ejs') %>
